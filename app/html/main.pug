+header()
.content
	.content-filter
	.main-cont
		.baner
			//.baner-nav
				.header-nav-sub-wrap
					-
						var items = [
						'Цифровой бизнес',
						'Управление развитием',
						'Бизнес-анализ',
						'Архитектура',
						'Разработка',
						'Тестирование',
						'Управление сервисами',
						'Технологии',
						'Данные и интелект',
						'Кибер безопасность',
						'Упарвление рисками',
						'Упарвление компетенциями',
						'Прорывные технологии',
						'Soft-skills'
						];
					each item in items
						.header-nav-sub__el
							span #{item}
							+icon("arrow-right","icon")
			.baner__el(style="background-image:url('img/baner-17.jpg')")
			.baner-item
				.baner-item__sub-title курс
				.baner-item__code MALK
				.baner-item__title Управление жизненным циклом услуг
				.baner-item__info Цель курса Управление жизненным циклом услуг на основе ITIL® – дать слушателям навыки поддержки предоставления
				//	.baner-item__date 24.07
				.baner-item-footer
					.baner-item__price 24500 р
