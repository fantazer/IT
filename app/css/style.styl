	color white
	flex(mid)
	span
		display: inline-block
		margin-right: 5px
		font-weight:700
	.icon
		size 18px
		fill white
.cat
	+below(1024px)
		grid-template-columns repeat(2,1fr);
	+below(768px)
		grid-template-columns repeat(1,1fr);
	display: grid
	grid-gap 10px
	grid-template-columns repeat(4,1fr);

.cat__el-title
	font-size: 12px
	//font-weight:bold
	margin-bottom: 20px
