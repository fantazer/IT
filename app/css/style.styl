			color white
		.cat__el__title
			color white
			opacity .5
		.icon
			fill white
		.cat__el-title
			color white
			opacity .5
		/*.cat__el-sub
			display: block*/

.cat__el--bg
	position: absolute
	width: 100%
	height: 100%
	bg-full()
	overflow hidden
