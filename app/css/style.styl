	@extend .btn--mark
	cp()
	padding: 15px 30px
	font-size: 12px

.section
	+below(1024px)
		margin: 50px 0
	+below(768px)
		margin: 30px 0
	margin: 100px 0
	position: relative
.section-title
	+below(768px)
		text-align: center
		padding-bottom: 20px
		margin-bottom: 20px
