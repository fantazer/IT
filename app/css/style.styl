	padding-bottom: 30px
	border-bottom 1px solid $gray
	margin-bottom: 40px
	color black
	line-height: 1

.popular__el
	+below(640px)
		margin-bottom: 30px
	//border 1px solid $border-color
	f()
	fl()
	margin-left: -1px
	background: white
	box-shadow 0 0 2px #e6e6e6
	margin-top: -1px
	br(5px)
	tr(all)
	&:hover
