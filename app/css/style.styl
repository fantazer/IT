.popular__el__code
	@extend .type--lg
	color $blue
	margin-bottom: 10px

.popular__el-content
	+below(640px)
		padding: 10px
	padding: 30px


.popular__el__title
	font-size: 16px
	font-weight:bold
	color black
	margin-bottom: 10px
	font-family:Museo

.popular__el__info
	margin-bottom: 30px
	color black
	line-height: 1.6

.popular__el-footer
	f()
	margin-top: auto
	justify-content: space-between
	border-top 1px solid $gray
	overflow hidden
.popular__el__price
	padding: 20px
	width: 50%
	@extend .type--md
	color black
	font-weight: 700
	text-align: center
//.banner-item__date
.popular__el__get
	background: $gray
	margin-left: auto
	cp()
	//color white
	width: 50%
	flex(mid)
	border-left 1px solid $gray
	span
		display: inline-block
		margin-right: 5px
		font-weight:700
	.icon
		size 18px
		fill $blue
.popular
	+below(1024px)
		grid-template-columns repeat(3,1fr);
	+below(768px)
		grid-template-columns repeat(2,1fr);
	+below(640px)
		grid-template-columns repeat(1,1fr);
	display: grid
	grid-gap 10px
	grid-template-columns repeat(4,1fr);

.popular__el-title
	margin-bottom: 10px

.star-row
	f()
	margin-bottom: 20px
	.icon
		size 12px
		margin-right: 5px
		fill $yellow
.header
	+below(1024px)
		background: white
		position: relative
		//border-bottom 1px solid $border-color
		bsh()
		height: 50px
		.main-cont
			height: 100%
.head--up
	z-index 1250!important
	box-shadow 0 0 0
.header-small
	+below(1024px)
		display: none
	background: $gray

.header-small-wrap
	f()
.header-small-el
	//color black
	font-size: 12px
	margin-right: 30px
	padding: 5px 0
	cp()
	tr(all)
	&:hover
		color black

.cat__el
	+below(1024px)
		transition none
	f()
	fl()
	br(5px)
	cp()
	tr(all)
	margin-left: -1px
	background: white
