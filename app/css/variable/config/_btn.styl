.btn
	br(8px)
	tr(all)
	cp()
	font-weight: 700
	display inline-flex
	background none
	border 0
	text-align: center
	justify-content center
	font-family $fontSecond
	line-height: 1
	&.disable
		pointer-events none
		opacity: .4

// btn size
.btn--sm
	@extend .btn
	font-size: 12px
	padding 12px 16px
	br(4px)
	.icon,.nav-icon
		tr()
		size 12px

.btn--md
	@extend .btn
	@extend .type--main
	padding 16px 36px
	.icon,.nav-icon
		tr()
		size 16px

.btn--lg
	@extend .btn
	@extend .type--md
	padding 20px 36px
	.icon,.nav-icon
		tr()
		size 24px

.btn--lg-fix
	width: 260px
	@extend .btn
	@extend .type--md
	padding 20px 36px

.btn--mobile
	@extend .btn
	+below(480px)
		width 100%

.btn--full
	@extend .btn
	width: 100%
	display block
// btn size === end

// btn type
.btn--mark
	@extend .btn
	color white
	background $mark
	&:hover
		background-color darken($markCalc,10)
		color white!important
	&:active
		background-color darken($markCalc,10)
	input[type="submit"]
		border 0
	.icon
		tr()
		fill white

.btn--dark
	@extend .btn
	color white
	background #02246c
	&:hover
		background-color lighten(#02246c,10)
		color white!important
	&:active
		background-color lighten(#02246c,10)
	input[type="submit"]
		border 0
	.icon
		tr()
		fill white


.btn--light
	@extend .btn
	border 1px solid $mark
	background-color #ffffff
	color $mark
	&:hover
		background: $mark
		color white
		.icon
			fill white
	.icon
		tr()
		fill $mark

.btn--simple
	@extend .btn
	border 1px solid $border-color
	color $mark
	&:hover
		border 1px solid $mark
	.icon
		tr()
		fill $mark

.btn--white
	@extend .btn
	background-color #ffffff
	color $mark
	border 1px solid white
	&:hover
		border 1px solid #00000012
		background: transparent
		color $mark
		.icon
			fill $mark
	.icon
		fill $mark

.btn--empty-white
	@extend .btn
	color white
	border 1px solid transparent
	&:hover
		border 1px solid white
		color white
	.icon
		fill white

.btn--light-mark
	@extend .btn
	border 0
	color $mark
	tr(all)
	background: $mark-simple
	.nav-icon
		fill $mark
	&:hover
		background: darken($mark-simple,3)
		color $mark
		.nav-icon
			fill $mark

.btn--disable
	pointer-events none
	opacity: .4
// btn type === end